        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stereokit-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stereokit-rust"
                ],
                "filter": {
                    "name": "stereokit-rust",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug with simulator 'demos'",
            "cargo": {
                "args": [
                    "build",
                    "--features", "event-loop",
                    "--example=main_pc",
                ],
                "filter": {
                    "name": "main_pc",
                    "kind": "example"
                }
            },
            "args": ["--test","--start", "Tex1"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug with PC headset 'demos'",
            "cargo": {
                "args": [
                    "build",
                    "--features", "event-loop",
                    "--example=main_pc",
                ],
                "filter": {
                    "name": "main_pc",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'manual' example (without winit)",
            "cargo": {
                "args": [
                    "build",
                    "--features", "no-event-loop",
                    "--example=manual",
                ],
                "filter": {
                    "name": "manual",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },

    ]
}